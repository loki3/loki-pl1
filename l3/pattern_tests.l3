	// single item
	:a v= 5
	5 assert=? a
	:a v= { :a 1 :b 2 }
	{ :a 1 :b 2 } assert=? a
	:a v= [ 1 2 :str ]
	[ 1 2 :str ] assert=? a
:assignmentSingle @doc """
