	2 assert=? a
	{ :k1 7 :k2 8 :k3 9 } assert=? b
	
	// keys aren't present
	// todo: this shouldn't fail silently
	[ :a ( :b @@hasKeys [ :k1 :k2 ] ) ] v= { :a 3 :b { :k4 7 :k5 8 :k3 9 } }
